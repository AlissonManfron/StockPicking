<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_resume">

    <fragment
        android:id="@+id/navigation_resume"
        android:name="br.com.alisson.stockpicking.ui.resume.ResumeFragment"
        android:label="@string/title_resume"
        tools:layout="@layout/fragment_resume" />

    <fragment
        android:id="@+id/navigation_portfolio"
        android:name="br.com.alisson.stockpicking.ui.portfolio.PortfolioFragment"
        android:label="@string/title_portfolio"
        tools:layout="@layout/fragment_portfolio" />

    <fragment
        android:id="@+id/navigation_alert"
        android:name="br.com.alisson.stockpicking.ui.alert.AlertFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_account" />


    <fragment
        android:id="@+id/navigation_account"
        android:name="br.com.alisson.stockpicking.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />
</navigation>